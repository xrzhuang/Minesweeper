<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="100dp"
    android:paddingHorizontal="55dp"
    tools:context="hu.ait.android.minesweeper.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minesweeper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/toggleFlagBtn"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="250dp"
        android:background="@drawable/minesweeperflag"
        android:text="ToggleButton"
        android:textOff="X"
        android:textOn=""
        android:textSize="35dp"
        android:textColor="#FFF"/>

    <hu.ait.android.minesweeper.MinesweeperView
        android:id='@+id/gameboard'
        android:layout_width="300dp"
        android:layout_height="300dp"
        />

    <Button
        android:id="@+id/clearButton"
        android:text="clear"
        android:layout_width="300dp"
        android:layout_height="50dp" />

</LinearLayout>




